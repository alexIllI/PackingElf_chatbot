# Discord Bot Configuration
# Get your bot token from: https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here

# MySQL Database Configuration
# Update these with your actual database credentials
MYSQL_HOST=localhost
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=your_database_name
MYSQL_PORT=3306

# AI Model Configuration
# Path to your ChatGLM3 GGUF model file
MODEL_PATH=models/chatglm3-6b.Q4_0.gguf

# Bot Configuration
# Command prefix for Discord commands (e.g., !query, !help)
COMMAND_PREFIX=!
# Maximum number of results to return from database queries
MAX_RESULTS=100
# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Performance Settings
# Number of threads for AI model processing (0 = auto-detect)
AI_THREADS=0
# Maximum memory usage for AI model (in MB, 0 = auto-detect)
AI_MEMORY_LIMIT=0

# Security Settings
# Enable/disable query logging (true/false)
LOG_QUERIES=true
# Enable/disable result caching (true/false)
ENABLE_CACHE=false
# Cache expiration time in seconds
CACHE_EXPIRY=3600 